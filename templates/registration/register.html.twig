{% extends 'base.html.twig' %}
{% block title %}Register{% endblock %}

{% block body %}
    {% for flash_error in app.flashes('messages') %}
        <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
    {% endfor %}

    <section class="vh-100" style="overflow: hidden">
        <div class="container py-5 h-100">
            <div class="row d-flex align-items-center justify-content-center h-100">
                <div class="col-md-8 col-lg-7 col-xl-6">
                    <img src="{{ asset('assets/img/draw2.webp') }}"
                         class="img-fluid" alt="Phone image">
                </div>
                <div class="col-md-7 col-lg-5 col-xl-5 offset-xl-1">
                    {{ form_start(form, {'attr': {'class': 'login'}}) }}
                        {{ form_row(form._token) }}
                        <!-- Email input -->
                        <div class="form-outline mb-4">
                            {{ form_label(form.nombre, 'Nombre') }}
                            {{ form_widget(form.nombre) }}
                            {% if form.nombre.vars.errors|length > 0 %}
                                <ul class="form-errors name">
                                    {% for error in form.nombre.vars.errors %}
                                        {{ error.message }}
                                    {% endfor %}
                                </ul>
                            {% endif %}
                        </div>
                        <div class="form-outline mb-4">
                            {{ form_label(form.apellido, 'Apellido') }}
                            {{ form_widget(form.apellido) }}
                            {% if form.apellido.vars.errors|length > 0 %}
                                <ul class="form-errors name">
                                    {% for error in form.apellido.vars.errors %}
                                        {{ error.message }}
                                    {% endfor %}
                                </ul>
                            {% endif %}
                        </div>
                        <!-- Password input -->
                        <div class="form-outline mb-4">
                            {{ form_label(form.plainPassword, 'Password') }}
                            {{ form_widget(form.plainPassword) }}
                            {% if form.plainPassword.vars.errors|length > 0 %}
                                <ul class="form-errors name">
                                    {% for error in form.plainPassword.vars.errors %}
                                        {{ error.message }}
                                    {% endfor %}
                                </ul>
                            {% endif %}
                        </div>
                        <!-- Email input -->
                        <div class="form-outline mb-4">
                            {{ form_label(form.email, 'Email') }}
                            {{ form_widget(form.email) }}
                            {% if form.email.vars.errors|length > 0 %}
                                <ul class="form-errors name">
                                    {% for error in form.email.vars.errors %}
                                        {{ error.message }}
                                    {% endfor %}
                                </ul>
                            {% endif %}
                        </div>

                        <!-- Submit button -->
                        {{ form_widget(form.save) }}


                        <div class="divider d-flex align-items-center my-4">
                            <p class="text-center fw-bold mx-3 mb-0 text-muted">O</p>
                        </div>

                    <a class="btn btn-primary btn-lg btn-block w-100" style="background-color: #3b5998" href="{{ path('app_login') }}"
                       role="button">
                        Ya tengo una cuenta
                    </a>
                </div>
            </div>
        </div>
    </section>

    {#{{ form_start(registrationForm) }}
        {{ form_row(registrationForm.email) }}
        {{ form_row(registrationForm.plainPassword, {
            label: 'Password'
        }) }}
        {{ form_row(registrationForm.agreeTerms) }}

        <button type="submit" class="btn">Register</button>
    {{ form_end(registrationForm) }}#}
{% endblock %}
